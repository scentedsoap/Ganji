<!DOCTYPE html>
<html lang="en">
    
    <head>
        <meta charset="utf-8">
        <title>About</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

        <link rel="stylesheet" href="styles.css">
    </head>
    <body class="dark-background">
        <div class="hero">
            <nav>
                <a href="/"><img src="Ganji.png" class="logo"></a>
                <ul>
                    <li class="dark-mode"><a href="/">HOME</a></li>
                    <li class="dark-mode"><a href="/about">ABOUT</a></li>
                    <li class="dark-mode"><a href="/form">SIGN UP</a></li>
                </ul>
            </nav>
        </div>
        <div class="content dark-mode">
            <h1>About Us ðŸ«¶</h1>
            <h2>Leaders/Members ðŸ«°</h2>

            <div class="leaders">
                <%- names %>
            </div>

            <br>

            <h2>Check out our favorite tracks!</h2>
            <div class="carousel">
                <% tracks.forEach(function(playlistTrack, i) { %>
                    <div class="card" style="width: 18rem;">
                        <img src= <%= playlistTrack?.track?.album?.images[0]?.url ?? "" %> class="card-img-top">
                        <div class="card-body dark-mode">
                          <h5 class="card-title"><%= `${i+1}. ${playlistTrack?.track?.name}` %></h5>
                          <p class="card-text"><%= playlistTrack?.track?.artists.map(artist => artist.name).join(", ") %></p>
                        </div>
                      </div>
                    
                 <% }); %> 
            </div>


        </div>
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    </body>
    
</html>